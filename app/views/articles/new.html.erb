<h1>Create New Form</h1>

<% if @article.errors.any? %>
<h3>Errors:</h3>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li>
				<%= msg%>
			</li>
			
		<%end%>
	</ul>
<%end%>

<%= form_for (@article) do |ar|%>
<p>
	<%= ar.label :title%>
    </br>
	<%= ar.text_field :title%>
</p>
<p>
	<%= ar.label :description%></br>
	<%= ar.text_area :description %>
</p>
<p>
	<%= ar.submit%>
</p>


<%end%>